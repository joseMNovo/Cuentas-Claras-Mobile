#:kivy 2.1.0
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

WindowManager:
    FirstWindow:
        name: "first"
        id: screen1
        sueldo1:sueldo1
        sueldo2:sueldo2
        totalapagar:totalapagar
        size_hint_y: 1
        size_hint_x: 0.99

        Image:
            source: "gatos.png"
            opacity: 0.1
            allow_stretch: True

        MDBoxLayout:
            orientation: "vertical"
            spacing: "15dp"
            padding: "12dp"
            pos_hint: {"top": .8}
            adaptive_height: True
            halign: "center"

            MDLabel:
                text: "Cuentas claras"
                font_size: 70
                halign: 'center'

            MDTextField:
                id: sueldo1
                hint_text: "Sueldo 1"
                helper_text_mode: "on_focus"
                icon_right: "account-cash"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: 0.9
                text_color_focus: 0, 0, 0, 1
                font_size: 40
                adaptive_height: True
                
            MDTextField:
                id: sueldo2
                hint_text: "Sueldo 2"
                helper_text_mode: "on_focus"
                icon_right: "account-cash"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: 0.9
                color_mode: "primary"
                text_color_focus: 0, 0, 0, 1
                font_size: 40
                adaptive_height: True


            MDTextField:
                id: totalapagar
                hint_text: "Total"
                helper_text_mode: "on_focus"
                icon_right: "cash"
                pos_hint: {"center_x": .5, "top": 1}
                size_hint_x: 0.9
                color_mode: "primary"
                text_color_focus: 0, 0, 0, 1
                adaptive_height: True
                font_size: 40
                
                
            MDRaisedButton:
                text: "Calcular"
                font_size: 50
                pos_hint:{"center_x": 0.5, "center_y": 0.5}
                on_release: 
                    app.calcular()
                    app.root.current = "second"
                    app.root.transition = SlideTransition(direction='left')

            MDRaisedButton:
                text: "Limpiar"
                font_size: 50
                pos_hint:{"center_x": 0.5, "center_y": 0.5}
                on_release: 
                    app.limpiar()


    SecondWindow:
        name: "second"
        id: screen2


        Image:
            source: "gatos.png"
            opacity: 0.1
            allow_stretch: True

        MDBoxLayout:
            orientation: "vertical"
            spacing: "150dp"
            padding: "120dp"
            pos_hint: {"top": .8}
            adaptive_height: True
            halign: "center"
            

            MDLabel:
                text: "Cuentas claras"
                font_size: 70
                halign: 'center'


            MDLabel:
                id: resultado1
                font_size: 70
                halign: 'center'


            MDLabel:
                id: resultado2
                font_size: 70
                halign: 'center'


            MDRaisedButton:
                text: "Volver"
                font_size: 50
                pos_hint:{"center_x": .5, "center_y": .5}
                on_release: 
                    app.root.current = "first"
                    app.root.transition = SlideTransition(direction='right')

            
